<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/metadata">
    <apiVersion>59.0</apiVersion>
    <label>OVE - Visit Completion Summary</label>
    <description>Record-triggered flow that updates day attendance summary fields when a visit is completed</description>
    <processType>AutoLaunchedFlow</processType>
    <status>Active</status>
    <interviewLabel>Visit Completion Summary {!$Flow.CurrentDateTime}</interviewLabel>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <object>Visit__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Visit_Status__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Completed</stringValue>
            </value>
        </filters>
        <connector>
            <targetReference>Get_Related_Orders</targetReference>
        </connector>
    </start>
    <recordLookups>
        <name>Get_Related_Orders</name>
        <label>Get Related Orders</label>
        <locationX>176</locationX>
        <locationY>134</locationY>
        <connector>
            <targetReference>Get_Related_Collections</targetReference>
        </connector>
        <object>Sales_Order__c</object>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Visit__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </filters>
        <outputReference>RelatedOrders</outputReference>
    </recordLookups>
    <recordLookups>
        <name>Get_Related_Collections</name>
        <label>Get Related Collections</label>
        <locationX>176</locationX>
        <locationY>276</locationY>
        <connector>
            <targetReference>Calculate_Summary</targetReference>
        </connector>
        <object>Collection__c</object>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Visit__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </filters>
        <outputReference>RelatedCollections</outputReference>
    </recordLookups>
    <assignments>
        <name>Calculate_Summary</name>
        <label>Calculate Summary Values</label>
        <locationX>176</locationX>
        <locationY>418</locationY>
        <connector>
            <targetReference>Loop_Orders</targetReference>
        </connector>
        <assignmentItems>
            <assignToReference>TotalOrderValue</assignToReference>
            <operator>Assign</operator>
            <value>
                <numberValue>0.0</numberValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>TotalCollectionAmount</assignToReference>
            <operator>Assign</operator>
            <value>
                <numberValue>0.0</numberValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>OrderCount</assignToReference>
            <operator>Assign</operator>
            <value>
                <numberValue>0.0</numberValue>
            </value>
        </assignmentItems>
    </assignments>
    <loops>
        <name>Loop_Orders</name>
        <label>Loop Through Orders</label>
        <locationX>176</locationX>
        <locationY>560</locationY>
        <collectionReference>RelatedOrders</collectionReference>
        <iterationOrder>Asc</iterationOrder>
        <nextValueConnector>
            <targetReference>Add_Order_Values</targetReference>
        </nextValueConnector>
        <noMoreValuesConnector>
            <targetReference>Loop_Collections</targetReference>
        </noMoreValuesConnector>
    </loops>
    <assignments>
        <name>Add_Order_Values</name>
        <label>Add Order Values</label>
        <locationX>50</locationX>
        <locationY>702</locationY>
        <connector>
            <targetReference>Loop_Orders</targetReference>
        </connector>
        <assignmentItems>
            <assignToReference>TotalOrderValue</assignToReference>
            <operator>Add</operator>
            <value>
                <elementReference>Loop_Orders.Total_Net_Amount__c</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>OrderCount</assignToReference>
            <operator>Add</operator>
            <value>
                <numberValue>1.0</numberValue>
            </value>
        </assignmentItems>
    </assignments>
    <loops>
        <name>Loop_Collections</name>
        <label>Loop Through Collections</label>
        <locationX>176</locationX>
        <locationY>844</locationY>
        <collectionReference>RelatedCollections</collectionReference>
        <iterationOrder>Asc</iterationOrder>
        <nextValueConnector>
            <targetReference>Add_Collection_Values</targetReference>
        </nextValueConnector>
        <noMoreValuesConnector>
            <targetReference>Get_Day_Attendance</targetReference>
        </noMoreValuesConnector>
    </loops>
    <assignments>
        <name>Add_Collection_Values</name>
        <label>Add Collection Values</label>
        <locationX>50</locationX>
        <locationY>986</locationY>
        <connector>
            <targetReference>Loop_Collections</targetReference>
        </connector>
        <assignmentItems>
            <assignToReference>TotalCollectionAmount</assignToReference>
            <operator>Add</operator>
            <value>
                <elementReference>Loop_Collections.Amount__c</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <recordLookups>
        <name>Get_Day_Attendance</name>
        <label>Get Day Attendance Record</label>
        <locationX>176</locationX>
        <locationY>1128</locationY>
        <connector>
            <targetReference>Has_Day_Attendance</targetReference>
        </connector>
        <object>Day_Attendance__c</object>
        <filterLogic>and</filterLogic>
        <filters>
            <field>User__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.OwnerId</elementReference>
            </value>
        </filters>
        <filters>
            <field>Attendance_Date__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Flow.CurrentDate</elementReference>
            </value>
        </filters>
        <getFirstRecordOnly>true</getFirstRecordOnly>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <decisions>
        <name>Has_Day_Attendance</name>
        <label>Day Attendance Found?</label>
        <locationX>176</locationX>
        <locationY>1270</locationY>
        <defaultConnectorLabel>No Attendance Record</defaultConnectorLabel>
        <rules>
            <name>Attendance_Found</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Day_Attendance</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Day_Attendance</targetReference>
            </connector>
            <label>Attendance Found</label>
        </rules>
    </decisions>
    <recordUpdates>
        <name>Update_Day_Attendance</name>
        <label>Update Day Attendance Summary</label>
        <locationX>50</locationX>
        <locationY>1412</locationY>
        <inputReference>Get_Day_Attendance</inputReference>
        <inputAssignments>
            <field>Total_Orders_Value__c</field>
            <value>
                <elementReference>TotalOrderValue</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Total_Collections__c</field>
            <value>
                <elementReference>TotalCollectionAmount</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Orders_Taken__c</field>
            <value>
                <elementReference>OrderCount</elementReference>
            </value>
        </inputAssignments>
    </recordUpdates>
    <variables>
        <name>RelatedOrders</name>
        <dataType>SObject</dataType>
        <isCollection>true</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <objectType>Sales_Order__c</objectType>
    </variables>
    <variables>
        <name>RelatedCollections</name>
        <dataType>SObject</dataType>
        <isCollection>true</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <objectType>Collection__c</objectType>
    </variables>
    <variables>
        <name>TotalOrderValue</name>
        <dataType>Currency</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <value>
            <numberValue>0.0</numberValue>
        </value>
    </variables>
    <variables>
        <name>TotalCollectionAmount</name>
        <dataType>Currency</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <value>
            <numberValue>0.0</numberValue>
        </value>
    </variables>
    <variables>
        <name>OrderCount</name>
        <dataType>Number</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <scale>0</scale>
        <value>
            <numberValue>0.0</numberValue>
        </value>
    </variables>
</Flow>
