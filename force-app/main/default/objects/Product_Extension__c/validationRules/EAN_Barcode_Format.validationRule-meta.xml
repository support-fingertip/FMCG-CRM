<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/metadata">
    <fullName>EAN_Barcode_Format</fullName>
    <active>true</active>
    <description>EAN Barcode must be 8 or 13 digits when specified.</description>
    <errorConditionFormula>AND(
    NOT(ISBLANK(Barcode_EAN__c)),
    NOT(REGEX(Barcode_EAN__c, "^[0-9]{8}$|^[0-9]{13}$"))
)</errorConditionFormula>
    <errorDisplayField>Barcode_EAN__c</errorDisplayField>
    <errorMessage>EAN Barcode must be 8 or 13 digits.</errorMessage>
</ValidationRule>
