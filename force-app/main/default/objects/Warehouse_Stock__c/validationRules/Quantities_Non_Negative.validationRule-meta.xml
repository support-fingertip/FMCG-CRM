<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/metadata">
    <fullName>Quantities_Non_Negative</fullName>
    <active>true</active>
    <description>Ensures stock quantity fields are non-negative</description>
    <errorConditionFormula>Qty_On_Hand__c &lt; 0 OR Qty_Reserved__c &lt; 0 OR Qty_Damaged__c &lt; 0</errorConditionFormula>
    <errorMessage>Stock quantities cannot be negative.</errorMessage>
</ValidationRule>
