<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Salesperson__c</field>
        <field>Month__c</field>
        <field>Total_Planned_Visits__c</field>
        <field>Territory__c</field>
        <field>Plan_Date__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>ManagerId</name>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Area Sales Manager Approval</label>
        <name>ASM_Approval</name>
        <number>1</number>
    </approvalStep>
    <description>Approval process for Permanent Journey Plans (PJP) submitted by sales representatives for monthly route planning</description>
    <entryCriteria>
        <criteriaItems>
            <field>Journey_Plan__c.Status__c</field>
            <operation>equals</operation>
            <value>Submitted</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approve_Journey_Plan</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalRejectionActions>
        <action>
            <name>Reject_Journey_Plan</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <label>PJP Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>ManagerId</userHierarchyField>
    </nextAutomatedApprover>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
